<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="car-type-1" class="co.edureka.spring.core.beans.Car">
		<property name="model" value="Audi"/>
		<property name="cost" value="3700000"/>
	</bean>

	<bean id="car-type-2" class="co.edureka.spring.core.beans.Car" p:model="BMW" p:cost="2850000"/>	
		
	<bean id="user1" class="co.edureka.spring.core.beans.User">
		<property name="userName" value="Sanjay Singh"/>
		<property name="car" ref="car-type-2"/>
	</bean>
	
	<bean id="user2" class="co.edureka.spring.core.beans.User" p:userName="Sunil Joseph" p:car-ref="car-type-1" />

</beans>
